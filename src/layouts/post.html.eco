---
layout: "default"
---
<article>
  <h1><%= @document.title %></h1>
  <div class="byline">By <a href="/authors/<%= @document.author.toLowerCase() %>"><%= @document.author %></a> on <%= @document.date.toLocaleDateString() %></div>
  <img class="feature-image" alt="<%= @document.title %>" title="<%= @document.title %>" src="/images/blog/<%= @document.featureImage %>" />
  <hr />
  <%- @content %>
  <hr />
</article>
<div id="disqus_thread"></div>
