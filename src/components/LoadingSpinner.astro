---
export interface Props {
  size?: 'small' | 'medium' | 'large';
  message?: string;
}

const { size = 'medium', message = 'Loading...' } = Astro.props;

const sizeClasses = {
  small: 'w-4 h-4',
  medium: 'w-8 h-8',
  large: 'w-12 h-12',
};
---

<div class="flex flex-col items-center justify-center p-8">
  <div
    class={`animate-spin rounded-full border-2 border-gray-300 dark:border-gray-600 border-t-blue-600 dark:border-t-blue-400 ${sizeClasses[size]}`}
  >
  </div>
  {message && <p class="mt-4 text-gray-600 dark:text-gray-400 text-sm">{message}</p>}
</div>
